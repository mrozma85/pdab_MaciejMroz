<local:WszystkieViewBase x:Class="Firma.View.WszystkieTowaryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Firma.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Expander Grid.Row="0" Header="Filtr aktywny">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </Expander>
        <DataGrid Grid.Row="1" AutoGenerateColumns="False" ItemsSource="{Binding List}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id Produktu" Binding="{Binding  IdProduktu}"/>
                <DataGridTextColumn Header="Kod" Binding="{Binding Kod}"/>
                <DataGridTextColumn Header="Nazwa" Binding="{Binding Nazwa}"/>
                <DataGridTextColumn Header="Id Pracownika Dodajacego" Binding="{Binding IdPracownikaDodajacego}"/>
                <DataGridTextColumn Header="Id Pracownika Modyfikujacego" Binding="{Binding IdPracownikaModyfikujacego}"/>
                <DataGridTextColumn Header="Id Pracownika Kasujacego" Binding="{Binding IdPracownikaKasujacego}"/>
                <DataGridTextColumn Header="Data i Czas Dodania" Binding="{Binding CzasiDataDodania}"/>
                <DataGridTextColumn Header="Data i Czas Modyfikacji" Binding="{Binding DataiCzasModyfikacji}"/>
                <DataGridTextColumn Header="Data i Czas Kasowania" Binding="{Binding DataiCzasKasowania}"/>
                <DataGridTextColumn Header="Uwagi" Binding="{Binding Uwagi}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</local:WszystkieViewBase>
