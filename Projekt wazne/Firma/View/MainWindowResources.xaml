    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:WszystkieTowaryViewModel}">
        <vw:WszystkieTowaryView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:WszystkieStawkiVatZakupuViewModel}">
        <vw:WszystkieStawkiVatZakupuView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:WszystkiePrzyjeciaZewnetrzneTowaruViewModel}">
        <vw:WszystkiePrzyjeciaZewnetrzneTowaruView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:WszystkiePozycjeWydanZewnetrznychTowaruViewModel}">
        <vw:WszystkiePozycjeWydanZewnetrznychTowaruView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:WszystkiePozycjePrzyjecZewnetrznychTowaruViewModel}">
        <vw:WszystkiePozycjePrzyjecZewnetrznychTowaruView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:WszystkieJednostkiMiaryTowaryViewModel}">
        <vw:WszystkieJednostkiMiaryTowaryView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:WszystkieFormyPlatnosciViewModel}">
        <vw:WszystkieFormyPlatnosciView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:WszystkieFakturyViewModel}">
        <vw:WszystkieFakturyView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:WszystkieAdresyViewModel}">
