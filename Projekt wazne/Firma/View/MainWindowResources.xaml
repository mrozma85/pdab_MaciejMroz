    <DataTemplate DataType="{x:Type vm:WszystkieZmianyCenTowarowViewModel}">
        <vw:WszystkieZmianyCenTowarowView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:WszystkieWydaniaZewnetrzneTowaruViewModel}">
